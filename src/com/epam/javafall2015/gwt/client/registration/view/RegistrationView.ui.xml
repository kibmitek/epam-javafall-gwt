<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel>
		<g:Label text="Fill the registration form please." styleName="w3-text-indigo" height="20px"/>
		<g:Label text="Mandatory fields marked with an asterisk symbol" styleName="w3-text-indigo" height="20px"/>
		<g:SimplePanel ui:field="message" height="20px"/>
		
		<table style="width: 10%">
			<tr>
				<td>Login</td>
				<td>
					<g:TextBox ui:field="login" width = "150px"></g:TextBox>
					<g:Label text="*"/>
				</td>
			</tr>
			<tr>
				<td>Email</td>
				<td>
					<g:TextBox ui:field="email" width = "150px"></g:TextBox>
					<g:Label text="*"/>
				</td>
			</tr>
			<tr>
				<td>Password</td>
				<td>
					<g:PasswordTextBox ui:field="password" width = "150px"></g:PasswordTextBox>
					<g:Label text="*"/>
				</td>
			</tr>
			<tr>
				<td>Repeat Password</td>
				<td>
					<g:PasswordTextBox ui:field="repeat_password" width = "150px"></g:PasswordTextBox>
					<g:Label text="*"/>
				</td>
			</tr>
			<tr>
				<td>First Name</td>
				<td>
					<g:TextBox ui:field="firstname" width = "150px"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>Last Name</td>
				<td>
					<g:TextBox ui:field="lastname" width = "150px"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>Gender</td>
				<td>
					<g:ListBox ui:field="gender" width = "150px">
						<g:item value='1'>
							male
						</g:item>
						<g:item value='2'>
							female
						</g:item>
					</g:ListBox>
				</td>
			</tr>
			<tr>
				<td>Sex</td>
				<td>
					<g:RadioButton ui:field="male" name='radiogroup' checked='true'/>
					<g:RadioButton ui:field="female" name='radiogroup'/>
				</td>
			</tr>
			
			<tr>
				<td></td>
				<td>
					<g:Button ui:field="submit_button"></g:Button>
				</td>
			</tr>
		</table>
		<br/>
	</g:HTMLPanel>
</ui:UiBinder> 